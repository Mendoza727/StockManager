{
  "expo": {
    "name": "StockManager",
    "slug": "StockManager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-StockManager.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon-StockManager.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos acceso a la cámara para tomar fotos.",
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso a la galería para seleccionar imágenes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-StockManager.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "CAMERA",
          "READ_EXTERNAL_STORAGE",
          "WRITE_EXTERNAL_STORAGE"
        ]
      }
    },
    "web": {
      "favicon": "./assets/icon-StockManager.png"
    }
  }
}
